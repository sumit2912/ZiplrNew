<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialButton_Regular_White" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/def_bt_height</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="custom_font">semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialButton_SemiBold_Orange" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/def_bt_height</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="custom_font">semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ProgressMaterialButton_SemiBold_Orange">
        <item name="bt_corner_radius">@dimen/def_bt_height</item>
        <item name="bt_background_color">@color/colorPrimary</item>
        <item name="pb_color">@color/white</item>
        <item name="bt_text_color">@color/white</item>
        <item name="bt_text_size">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="bt_font_path">font/ProximaNova-Semibold.ttf</item>
        <item name="android:textAllCaps">false</item>
        <item name="bt_anim_duration">250</item>
    </style>

    <style name="TextView_Regular_White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="custom_font">regular</item>
    </style>

    <style name="TextView_Bold_White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="custom_font">bold</item>
    </style>

    <style name="CollapsedAppBarTitle" parent="@style/TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="ExpandedAppBarTitle" parent="@style/TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/_22sdp</item>
    </style>

    <style name="Form_SubTitle">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="custom_font">regular</item>
    </style>

    <style name="TextView_Bold_Black_Big">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="custom_font">bold</item>
    </style>

    <style name="Custom_TextInputLayout_Style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
    </style>

    <style name="Custom_TextInputEditText_Style">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView_SemiBold_Black" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Profile_Name_Black_Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:singleLine">true</item>
        <item name="custom_font">bold</item>
    </style>

    <style name="Profile_Email_Grey_Regular">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:singleLine">true</item>
        <item name="custom_font">regular</item>
    </style>

    <style name="ViewLine_Grey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">@dimen/_15sdp</item>
        <item name="android:layout_marginRight">@dimen/_15sdp</item>
        <item name="android:background">@color/hint_color</item>
    </style>
</resources>
